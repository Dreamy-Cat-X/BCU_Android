<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/backgroundPrimary">

    <ImageView
        android:id="@+id/packBanner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toStartOf="@id/scrollDesc"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:id="@+id/scrollDesc"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/cell_shape"
        android:minHeight="192dp"
        app:layout_constraintBottom_toBottomOf="@id/packBanner"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/packBanner"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/packDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/backgroundPrimary"
            android:textColor="?attr/TextPrimary" />
    </ScrollView>

    <TableLayout
        android:id="@+id/packDTab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/packExitB"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/packBanner">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.yumetsuki.bcu.androidutil.supports.AutoMarquee
                android:id="@+id/packVersion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/cell_shape"
                android:gravity="center"
                android:textColor="?attr/TextPrimary" />

            <com.yumetsuki.bcu.androidutil.supports.AutoMarquee
                android:id="@+id/packBCUver"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/cell_shape"
                android:gravity="center"
                android:textColor="?attr/TextPrimary" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.yumetsuki.bcu.androidutil.supports.AutoMarquee
                android:id="@+id/packCreateD"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/cell_shape"
                android:gravity="center"
                android:textColor="?attr/TextPrimary" />

            <com.yumetsuki.bcu.androidutil.supports.AutoMarquee
                android:id="@+id/packExportD"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/cell_shape"
                android:gravity="center"
                android:textColor="?attr/TextPrimary" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.yumetsuki.bcu.androidutil.supports.AutoMarquee
                android:id="@+id/packSTCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/cell_shape"
                android:gravity="center"
                android:textColor="?attr/TextPrimary" />

            <com.yumetsuki.bcu.androidutil.supports.AutoMarquee
                android:id="@+id/packCAnim"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/cell_shape"
                android:gravity="center"
                android:textColor="?attr/TextPrimary" />
        </TableRow>

    </TableLayout>

    <Button
        android:id="@+id/packExitB"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/button"
        android:text="@string/main_file_ok"
        android:textColor="?attr/TextPrimary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/scrollDesc"
        app:layout_constraintStart_toStartOf="@id/scrollDesc"
        app:layout_constraintTop_toBottomOf="@id/scrollDesc" />

</androidx.constraintlayout.widget.ConstraintLayout>